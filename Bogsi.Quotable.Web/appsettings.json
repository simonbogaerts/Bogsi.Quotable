{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Seq" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://logging-seq:5341"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "QuotableDb": "See DOTNET Secrets"
  },
  "Keycloak": {
    "AuthorizationUrl": "http://localhost"
  },
  "Authentication": {
    "MetadataAddress": "http://localhost",
    "ValidIssuer": "http://localhost",
    "Audience": "See DOTNET Secrets",
    "Authority": "http://localhost"
  }
}
